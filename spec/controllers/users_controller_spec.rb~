require 'spec_helper'

describe UsersController do

  describe "GET 'new'" do
    it "should be successful" do
      get 'new'
      response.should be_success
    end
  end
  
  describe "GET 'show'" do
	it "should have the right title" do
	get :show, :id => @user
	response.should have_selector("title", :content => @user.name)
	end

  

end
